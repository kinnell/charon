.col-md-6
  .panel

    .panel-heading
      %h1.text-center= @service_queues.first.name

    .panel-body
      %table.table.table-bordered.table-responsive{style: "font-size: 16px"}
        %thead
          %tr
            %th.col-md-1.text-center= "#"
            %th= "Name"
            %th.text-center= "Specialty"
            %th.col-md-4.text-center= "Estimated Wait Time"

        %tbody
          - @service_queues.first.tickets.waiting.each do |ticket|
            %tr{class: ("warning" if ticket.first_in_waiting?)}
              %td.text-center= ticket.waiting_spot
              %td= ticket.name
              %td.text-center
                %span.label.label-primary{style: "background-color: #{ticket.subspecialty.specialty.badge_color}"}= ticket.subspecialty.name.upcase if ticket.subspecialty
              %td.text-center= timeago_tag (Time.now - ticket.estimated_waiting_time)

