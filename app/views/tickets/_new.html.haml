.modal.fade{id: "new-ticket-for-queue-#{queue.id}-modal", "aria-hidden" => "true", "aria-labelledby" => "myModalLabel", role: "dialog", tabindex: "-1"}
  .modal-dialog.modal-sm
    .modal-content
      = form_for queue.tickets.new do |f|
        .modal-header
          %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} Ã—
          %h4.modal-title.text-center= "Create a ticket for <b>#{queue.name}</b>".html_safe
        .modal-body
          = f.text_field :name, class: "form-control", placeholder: "Name"
          = f.text_area :note, class: "form-control", placeholder: "Comment (optional)"
          = f.hidden_field :service_queue_id, value: queue.id
        .modal-footer
          = f.submit "Create Ticket", class: "btn btn-success btn-block"

