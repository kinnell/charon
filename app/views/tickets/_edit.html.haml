.modal.fade{id: "edit-ticket-#{ticket.id}-modal", "aria-hidden" => "true", "aria-labelledby" => "myModalLabel", role: "dialog", tabindex: "-1"}
  .modal-dialog.modal-sm
    .modal-content
      = form_for ticket do |f|
        .modal-header
          %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} Ã—
          %h4.modal-title.text-center= "Edit <b>#{ticket.name}</b>".html_safe
        .modal-body
          %h6 Name:
          = f.text_field :name, class: "form-control", required: true
          %h6 Subspecialty:
          = f.grouped_collection_select :subspecialty_id, ticket.service_queue.specialties, :subspecialties, :name, :id, :name, {}, { class: "form-control" }
          %h6 Note (optional):
          = f.text_area :note, class: "form-control"
        .modal-footer
          = f.submit "Save", class: "btn btn-success btn-block"

